<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".fragments.ContactsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:text="Contacts"/>
            <ImageView
                android:id="@+id/addcontact"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/add"/>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.SearchView
                android:id="@+id/srchv"
                android:paddingStart="-10dp"
                android:backgroundTint="@color/white"
                android:background="@color/white"
                app:queryBackground="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:defaultQueryHint="Search Contact"
                app:iconifiedByDefault="false"/>

        </androidx.cardview.widget.CardView>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiper"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                />


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="0dp"
        android:id="@+id/addeventsheet"
        app:cardBackgroundColor="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/closeBtn"
                        android:paddingTop="5dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        app:tint="@color/white"
                        android:src="@drawable/back"
                        tools:ignore="MissingConstraints" />
                    <TextView
                        android:id="@+id/backbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Add Contacts"
                        android:paddingTop="3dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textColor="@color/white"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose connection type"
                    android:paddingTop="3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="@color/white"/>

                <RadioGroup
                    android:id="@+id/radioGroupe"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:checkedButton="@+id/enabled_selected">

                    <RadioButton
                        android:id="@+id/enabled_selected"
                        android:layout_width="0dp"
                        android:paddingTop="3dp"
                        app:buttonTint="@color/blue"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_regular"
                        android:enabled="true"
                        android:paddingStart="10dp"
                        android:text="Bluetooth"/>

                    <RadioButton
                        android:id="@+id/disabled_selected"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/blue"
                        android:layout_weight="1"
                        android:paddingTop="3dp"
                        android:fontFamily="@font/poppins_regular"
                        android:enabled="true"
                        android:textColor="@color/white"
                        android:paddingStart="10dp"
                        android:text="Cellular / Wifi"/>

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/onlineLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Exchange IDs with your contact"
                    android:paddingTop="3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:textSize="12dp"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Give below ID to your contact"
                    android:paddingTop="3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:textSize="12dp"
                    android:textColor="@color/white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="20dp"
                    android:layout_height="50dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/idHolder"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginStart="20dp"
                            android:layout_height="match_parent"
                            android:text="zqdi879kjsqs"
                            android:paddingTop="3dp"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center_vertical"
                            android:textSize="12dp"
                            android:textColor="#007AFE" />

                        <ImageView
                            android:id="@+id/copybtn"
                            android:layout_margin="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/copy"
                            tools:ignore="MissingConstraints" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Enter links from your contact"
                    android:paddingTop="3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:textSize="12dp"
                    android:textColor="@color/white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_margin="20dp"
                    android:layout_height="50dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/idLayout"
                        android:layout_width="match_parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_height="match_parent"
                        app:boxStrokeColor="@color/selector2"
                        app:hintTextColor="@color/white"
                        app:hintAnimationEnabled="false"
                        android:hint="Enter link from your contact here"
                        android:textColorHint="@color/black">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/idEt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:paddingTop="6dp"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:textCursorDrawable="@null"
                            android:inputType="text"
                            android:maxLines="1"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addctBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/blue"
                    android:text="Add Contact"
                    android:textColor="@color/bg"
                    android:padding="10dp"
                    android:fontFamily="@font/urbanist"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="25dp"
                    android:layout_marginHorizontal="50dp"/>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/btqrLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Have one user scan the other user's QR code to connect."
                    android:paddingTop="3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="start"
                    android:textSize="12dp"
                    android:textColor="@color/white" />

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:id="@+id/qrHolder"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/scanBtn"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:visibility="visible"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        android:src="@drawable/scan" />

                    <TextView
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan now"
                        android:paddingTop="3dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:textSize="12dp"
                        android:textColor="@color/blue" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btscLayout"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btscanLayout"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/helptext"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scan bluetooth devices or Host a Connection"
                        android:paddingTop="3dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:textSize="12dp"
                        android:textColor="@color/white" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieView"
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_margin="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:lottie_rawRes="@raw/scananim"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="true"/>

                    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                        android:id="@+id/swiperbt"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/mainRecyclerviewbt"
                            android:nestedScrollingEnabled="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false" />


                    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

                    <TextView
                        android:id="@+id/scantext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginVertical="10dp"
                        android:text="Tap to start Scan"
                        android:paddingTop="3dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:textSize="12dp"
                        android:textColor="@color/blue" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bthostLayout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/helptext2"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Host a Connection or Scan bluetooth devices"
                        android:paddingTop="3dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:textSize="12dp"
                        android:textColor="@color/white" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieView2"
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_margin="20dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:lottie_rawRes="@raw/bt"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="true"/>
                    <TextView
                        android:id="@+id/hosttext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Tap to start Host"
                        android:paddingTop="3dp"
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="start"
                        android:textSize="12dp"
                        android:textColor="@color/blue" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>