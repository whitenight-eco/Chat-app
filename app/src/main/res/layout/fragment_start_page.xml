<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/first"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/startBtn"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:layout_margin="25dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Secure messaging and Stay connected even Offline!"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="15dp"
                android:src="@drawable/arrow"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Experience seamless communication. Cypher enables peer-to-peer (P2P) communication. Thanks to Bluetooth connection for ensuring communication continuity, empower us to communicate more freely and securely. "/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/startBtn"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/edtimg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                app:cardCornerRadius="150dp">
                <ImageView
                    android:id="@+id/pfp"
                    android:src="@drawable/pfp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

            <!-- Second CardView with transparency -->
            <androidx.cardview.widget.CardView
                android:id="@+id/edits"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="150dp"
                app:cardCornerRadius="150dp"
                android:alpha="0.5"> <!-- Adjust alpha for transparency -->

                <ImageView
                    android:id="@+id/edt"
                    android:padding="10dp"
                    android:src="@drawable/addimg"
                    app:tint="@color/bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>

        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Enter a username"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:boxStrokeColor="@color/selector"
            app:hintTextColor="@color/white"
            android:textColorHint="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textCursorDrawable="@null"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:maxLength="20"
                android:textAllCaps="false"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789_."/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/startBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/blue"
        android:text="Start"
        android:textColor="@color/bg"
        android:padding="15dp"
        android:fontFamily="@font/urbanist"
        android:textStyle="bold"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginHorizontal="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>